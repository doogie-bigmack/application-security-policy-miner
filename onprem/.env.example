# On-Premises Deployment Configuration

# Application Domain
APP_DOMAIN=policy-miner.local

# PostgreSQL Configuration
POSTGRES_USER=policy_miner
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_DB=policy_miner
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# MinIO Configuration
MINIO_ROOT_USER=CHANGE_ME_STRONG_USERNAME
MINIO_ROOT_PASSWORD=CHANGE_ME_STRONG_PASSWORD
MINIO_DOMAIN=minio.policy-miner.local

# Application Security
SECRET_KEY=CHANGE_ME_GENERATE_WITH_openssl_rand_hex_32
ENCRYPTION_KEY=CHANGE_ME_GENERATE_WITH_python_fernet

# Grafana Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# LLM Configuration (Choose one)
# Option 1: Direct Anthropic API (not recommended for production)
ANTHROPIC_API_KEY=

# Option 2: AWS Bedrock (recommended)
LLM_PROVIDER=aws_bedrock
AWS_BEDROCK_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Option 3: Azure OpenAI (recommended)
#LLM_PROVIDER=azure_openai
#AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
#AZURE_OPENAI_API_KEY=
#AZURE_OPENAI_DEPLOYMENT_NAME=

# CORS Configuration
CORS_ORIGINS=https://policy-miner.local

# Git Configuration (for on-prem Git servers)
# If using self-hosted GitLab, GitHub Enterprise, or Bitbucket Server
# GIT_SERVER_URL=https://git.yourcompany.com
# GIT_SERVER_CA_BUNDLE=/path/to/ca-bundle.crt

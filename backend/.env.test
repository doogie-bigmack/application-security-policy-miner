# Test Mode Environment Configuration
# This file is used for E2E testing with mock external API responses

# Enable test mode to use mock responses instead of real API calls
TEST_MODE=true

# Database Configuration (test database)
DATABASE_URL=postgresql://postgres:postgres@localhost:5434/policy_miner_test
DATABASE_HOST=localhost
DATABASE_PORT=5434
DATABASE_NAME=policy_miner_test
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres

# Redis Configuration (same as dev, but different key prefix)
REDIS_URL=redis://localhost:6381/0
REDIS_HOST=localhost
REDIS_PORT=6381

# MinIO Configuration (same as dev, different bucket)
MINIO_ENDPOINT=localhost:9004
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=policy-miner-test
MINIO_USE_SSL=false

# API Configuration
API_HOST=0.0.0.0
API_PORT=7777
API_RELOAD=false
LOG_LEVEL=INFO

# Security
SECRET_KEY=test-secret-key-for-e2e-testing-only
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# External Services (tokens not used in test mode, but required by config)
GITHUB_TOKEN=test-token
GITLAB_TOKEN=test-token
BITBUCKET_TOKEN=test-token
AZURE_DEVOPS_TOKEN=test-token

# PBAC Providers (endpoints not called in test mode)
OPA_ENDPOINT=http://localhost:8181
AWS_REGION=us-east-1

# Feature Flags
ENABLE_AUTO_APPROVAL=false
ENABLE_RISK_SCORING=true
ENABLE_EMBEDDINGS=false
